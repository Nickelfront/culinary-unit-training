                              <TextField fx:id="coursePrice" layoutX="62.0" layoutY="341.0" prefHeight="29.0" prefWidth="306.0" promptText="Цена" />
                              <Label layoutX="156.0" layoutY="43.0" text="Нов курс">
                                 <font>
                                    <Font size="26.0" />
                                 </font>
                              </Label>
                              <Button layoutX="58.0" layoutY="393.0" mnemonicParsing="false" onAction="#handleAddCourses" prefHeight="29.0" prefWidth="135.0" text="Добави" />
                              <Button layoutX="234.0" layoutY="393.0" mnemonicParsing="false" onAction="#handleClearForm" prefHeight="29.0" prefWidth="134.0" text="Изчисти" />
