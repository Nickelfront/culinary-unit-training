                              <TableColumn fx:id="availableSpotsColumn" minWidth="-1.0" prefWidth="156.0" resizable="false" text="Макс. свободни места" />
                              <TableColumn fx:id="priceColumn" prefWidth="104.0" resizable="false" text="Цена" />
                          </columns>
                        </TableView>
                     </content>
                  </Tab>
                <Tab text="Нов курс">
                     <content>
                        <Pane>
                           <children>
